<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:radius="15dp"
    android:background="@drawable/picklist_item_shape"
    android:padding="10dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <LinearLayout
                android:layout_weight="0.9"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/pallated_list_item_carton_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textboxTextLightColor"
                    android:text="CARTON NO"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:width="100dp"
                        android:textColor="@color/secondaryLightColor"
                        android:text="LOCATION" />
                    <TextView
                        android:id="@+id/pallated_list_item_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primaryTextColor"
                        android:text="LOCATION NAME"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:width="100dp"
                        android:textColor="@color/secondaryLightColor"
                        android:text="DATE" />

                    <TextView
                        android:id="@+id/pallated_list_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primaryTextColor"
                        android:text="2022-01-07"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>