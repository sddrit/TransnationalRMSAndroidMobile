<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:radius="15dp"
    android:background="@drawable/picklist_item_shape"
    android:padding="10dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <LinearLayout
                android:layout_weight="0.9"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/request_list_item_request_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textboxTextLightColor"
                    android:text="REQUEST NO"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:width="100dp"
                        android:textColor="@color/secondaryLightColor"
                        android:text="CUSTOMER" />
                    <TextView
                        android:id="@+id/request_list_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primaryTextColor"
                        android:text="PRICE WATER HOUSE COOPER"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:width="100dp"
                        android:textColor="@color/secondaryLightColor"
                        android:text="DATE" />

                    <TextView
                        android:id="@+id/request_list_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primaryTextColor"
                        android:text="2022-01-07"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/request_list_item_signed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    app:tint="#009c38"
                    android:src="@drawable/baseline_check_circle_outline_black_24dp">
                </ImageView>

                <ImageView
                    android:id="@+id/request_list_item_not_signed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    app:tint="#FFC107"
                    android:src="@drawable/baseline_back_hand_black_24dp">
                </ImageView>

            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>